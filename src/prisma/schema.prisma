// ========================================
// Entity
// ========================================

model Entity {
  IID            IID       @relation(fields: [id], references: [id])
  id             String    @id
  type           String
  startDate      DateTime?
  endDate        DateTime?
  status         Int
  relayerNode    String
  credentials    String[]
  entityVerified Boolean
  metadata       Json?
  accounts       Json?
  externalId     String?
  owner          String?
}

